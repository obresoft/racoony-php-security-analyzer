{
    "name": "obresoft/racoony",
    "description": "A security-first static analysis tool for PHP applications and frameworks. Identifies risky patterns and vulnerabilities based on CWE classifications.",
    "license": "proprietary",
    "type": "application",
    "keywords": [
      "php",
      "security",
      "vulnerability",
      "static analysis",
      "sast",
      "sast tool",
      "cwe",
      "code scanner",
      "secure coding",
      "php security",
      "laravel security",
      "symfony security",
      "wordpress security"
    ],
    "autoload": {
        "psr-4": {
            "Obresoft\\Racoony\\": "src/"
        }
    },
    "autoload-dev": {
      "psr-4": {
        "Obresoft\\Racoony\\Tests\\": "tests/"
      }
    },
    "bin": [
      "racoony"
    ],
    "authors": [
        {
            "name": "Oleksandr Bredikhin",
            "email": "olbresoft@gmail.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "symfony/console": "^7.2",
        "symfony/filesystem": "^7.2",
        "symfony/finder": "^7.2",
        "webmozart/assert": "^1.11",
        "nikic/php-parser": "^5.4",
        "ext-pdo": "*",
        "ramsey/collection": "^2.1",
        "ext-zip": "*"
    },
    "require-dev": {
        "rector/rector": "^2.0",
        "phpstan/phpstan": "^2.1",
        "roave/security-advisories": "dev-latest",
        "phpunit/phpunit": "^12.1",
        "friendsofphp/php-cs-fixer": "^3.84"
    },
    "scripts": {
      "style-fix": [
        "@php ./vendor/bin/php-cs-fixer fix  --allow-risky=yes --using-cache=no"
      ],
      "rector": [
        "@php ./vendor/bin/rector process"
      ],
      "phpunit": [
        "@php ./vendor/bin/phpunit"
      ],
      "rector-dr": [
        "@php ./vendor/bin/rector process --dry-run"
      ],
      "phpstan": [
        "@php -d memory_limit=512M ./vendor/bin/phpstan analyse -c phpstan.neon --xdebug"
      ]
    }
}
